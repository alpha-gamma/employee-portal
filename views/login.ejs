<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>JobListing | Login</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/fonts/material-icon/css/material-design-iconic-font.min.css" />

    <!-- Main css -->
    <link rel="stylesheet" href="/css/style-register.css" />
  </head>
  <body>
    <div class="main">
      <h1>Login</h1>
      <div class="container">
        <div class="sign-up-content">
          <form method="POST" class="signup-form">
            <h2 class="form-title">Enter your credentials</h2>
            <div class="form-textbox">
              <label for="username">Email</label>
              <input type="email" name="username" id="username" placeholder="Your email id" />
            </div>

            <div class="form-textbox">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" />
            </div>
            <div class="form-group">&nbsp;</div>
            
            <div class="form-textbox">
              <input type="submit" name="submit" id="submit" class="submit" value="Login" />
            </div>
          </form>

          <p class="loginhere">Don't have account ?<a href="/auth/register" class="loginhere-link"> Create Account</a></p>
        </div>
      </div>
    </div>

    <!-- JS -->
    <script src="/js/vendor/jquery/jquery.min.js"></script>
    <script src="/js/main-login.js"></script>
  </body>
</html>
